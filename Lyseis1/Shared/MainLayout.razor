@using Lyseis.Classes
@inherits LayoutComponentBase
<MudThemeProvider Theme="Globals.Default"/>
<MudOverlay @bind-Visible="open" DarkBackground="true" AutoClose="true"/>
<MudDrawer @bind-Open="@open" DisableOverlay="true" Elevation="1" Variant="@DrawerVariant.Temporary">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">My App</MudText>
    </MudDrawerHeader>
    <MudNavMenu>

        @foreach (string menu in _menus)
        {
            <MudNavLink Match="NavLinkMatch.All" OnClick="() => ChangeMenu()">@menu</MudNavLink>
        }

    </MudNavMenu>
</MudDrawer>
<MudLayout>
    <MudAppBar Elevation="5">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => ToggleDrawer())"/>
    </MudAppBar>

    <MudMainContent Class="pt-16 px-16" Style="margin-top: 5px">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>